@model socialProject.ViewModels.PasportViewModel

@{
    Layout = null;
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/tur/css/reset.css">
    <link rel="stylesheet" href="~/tur/css/slick.css">
    <link rel="stylesheet" href="~/tur/css/jquery.fancybox.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/tur/css/animate.css">
    <link rel="stylesheet" href="~/tur/css/style.css">
</head>
<body>


    <header class="HeaderMain SecMain">
        <div class="container">
            <div class="headerlogo">
                <img src="~/tur/images/logo.png" alt="logo" class="logo">
                <h3 class="logoTextMain">Социальная поддержка населения г.Димитровград</h3>
                <nav class="navbarHeader">
                    <ul class="menu__listMain">
                        <li><a class="btn btn-sm sign-up" asp-action="Index" asp-controller="Home">Главная</a></li>
                        <li><a class="btn btn-sm sign-up" asp-action="Category" asp-controller="Home">Категории</a></li>
                        <li><a class="btn btn-sm sign-up " href="#">Волонтерам</a></li>
                        <li><a class="btn btn-sm sign-up " href="#">Благотворительность</a></li>
                        <li><a class="btn btn-sm sign-up " href="#">О нас</a></li>
                        <li><a class="btn btn-sm sign-up " href="#">Контакты</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li>

                                <a class="btn btn-sm sign-up ">@User.Identity.Name</a>
                            </li>

                            if (@User.IsInRole("admin"))
                            {
                                <li>
                                    <a class="btn btn-sm sign-up " asp-action="AdminPage" asp-controller="Home">Администратор</a>
                                </li>
                            }
                            if (@User.IsInRole("user"))
                            {
                                <li>

                                    <a class="btn btn-sm sign-up " asp-action="Index" asp-controller="Person">Пользователь</a>

                                </li>
                            }

                            <li>
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input type="submit" class="btn btn-sm sign-up" value="Выход" />

                                </form>
                            </li>
                        }
                        else
                        {
                            <li><a class="btn btn-sm sign-up" asp-controller="Account" asp-action="Login">Войти</a></li>
                            <li><a class="btn btn-sm sign-up" asp-controller="Account" asp-action="Register">Зарегистрироваться</a></li>

                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div  class="col">

            </div>
            <div  class="col order-5">

            </div>
            <div class="col order-1" style=" margin-top: 50px;">

                <form method="post" asp-action="Create" asp-controller="Pasport" class="form-container">
                    <div class="form-row">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col">
                            <label asp-for="FirstName">Фамилия</label>
                            <input type="text" class="form-control" asp-for="FirstName" placeholder="Фамилия">
                        </div>

                        <div class="col ">
                            <label asp-for="Name">Имя</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Имя">
                        </div>

                        <div class="col ">
                            <label asp-for="LastName">Отчество</label>
                            <input type="text" class="form-control" asp-for="LastName" placeholder="Отчество">
                        </div>

                        <div class="col ">
                            <label asp-for="DateOfBirth">Дата рождения</label>
                            <input type="date" class="form-control" asp-for="DateOfBirth">
                        </div>

                        <div class="col">
                            <label asp-for="BornPlace">Место рождения</label>
                            <input type="text" class="form-control" asp-for="BornPlace" placeholder="Область, Город, проспект улица дом квартира ">
                        </div>

                        <div class="col">
                            <label asp-for="Address">Адрес проживания</label>
                            <input type="text" class="form-control" asp-for="Address" placeholder="Область, Город, проспект улица дом квартира ">
                        </div>
                        <div class="col">
                            <label asp-for="PasportSeria">Серия паспорта</label>
                            <input type="text" class="form-control" asp-for="PasportSeria" placeholder="Серия паспорта первые 4 цифры">
                        </div>

                        <div class="col">
                            <label asp-for="PasportNumber">Номер паспорта</label>
                            <input type="text" class="form-control" asp-for="PasportNumber" placeholder="Номер паспорта 6 цифр">
                        </div>

                        <div class="col">
                            <label asp-for="DepartmentCode">Код подразделения</label>
                            <input type="text" class="form-control" asp-for="DepartmentCode"  placeholder="Код подразделения 123-456">
                        </div>

                        <div class="col">
                            <label asp-for="DateOfIssue">Дата выдачи</label>
                            <input type="date" class="form-control" asp-for="DateOfIssue">
                        </div>

                        <div class="col">
                            <label asp-for="IssueBy">Паспорт выдан</label>
                            <input type="text" class="form-control" asp-for="IssueBy" placeholder="Отдел ">
                        </div>
                        <div class="col">
                            <label asp-for="SexOfPerson">Пол</label>
                            <input type="text" class="form-control" asp-for="SexOfPerson" placeholder="Пол ">
                        </div>
                    </div>
                    


                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </form>
            </div>
        </div>
    </div>
</body>

