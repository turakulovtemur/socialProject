
@{
    Layout = null;
}



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/tur/css/reset.css">
    <link rel="stylesheet" href="~/tur/css/slick.css">
    <link rel="stylesheet" href="~/tur/css/jquery.fancybox.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/tur/css/animate.css">
    <link rel="stylesheet" href="~/tur/css/style.css">
</head>
<body>


    <header class="HeaderMain">
        <div class="container">
            <div class="headerlogo">
                <img src="~/tur/images/logo.png" alt="logo" class="logo">
                <h3 class="logoText">Социальная поддержка населения г.Димитровград</h3>
                <nav class="navbarHeader">
                    <ul class="menu__list">
                        <li><a class="btn btn-sm sign-up" asp-action="Index" asp-controller="Home">Главная</a></li>
                        <li><a class="btn btn-sm sign-up" asp-action="Category" asp-controller="Home">Категории</a></li>
                        <li><a class="btn btn-sm sign-up" href="#">Волонтерам</a></li>
                        <li><a class="btn btn-sm sign-up" href="#">Благотворительность</a></li>
                        <li><a class="btn btn-sm sign-up" href="#">О нас</a></li>
                        <li><a class="btn btn-sm sign-up" href="#">Контакты</a></li>

                        @if (User.Identity.IsAuthenticated)
                        {

                            <li>
                                <p class="btn btn-sm sign-up" style="color:white;" class="menu__list">@User.Identity.Name</p>

                            </li>
                            if (@User.IsInRole("admin"))
                            {
                                <li>
                                    <p class="btn btn-sm sign-up" style="color:white;">
                                        Администратор
                                    </p>
                                </li>
                            }
                            <li>
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input type="submit" class="btn btn-sm sign-up" value="Выход" />

                                </form>
                            </li>
                        }
                        else
                        {
                            <li><a class="btn btn-sm sign-up" asp-controller="Account" asp-action="Login">Войти</a></li>
                            <li><a class="btn btn-sm sign-up" asp-controller="Account" asp-action="Register">Зарегистрироваться</a></li>

                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col">

            </div>
            <div class="col order-5">

            </div>
            <div class="col order-1">
                <table class="table">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Описание</td>
                            <td>Кнопка</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="table">
                            <th scope="row">1</th>
                            <td colspan="2">Пользователи и права доступа</td>
                            <td><a asp-action="UserList" asp-controller="Roles">Перейти</a></td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td colspan="2">Список ролей</td>
                            <td><a asp-action="Index" asp-controller="Roles">Перейти</a></td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td colspan="2">Список пользователей и добавление</td>
                            <td><a asp-action="Index" asp-controller="Users">Перейтии</a></td>
                        </tr>
                        <tr>
                            <th scope="row">4</th>
                            <td>Заявления</td>
                            <td><a asp-action="Index" asp-controller="Document">Перейтий</a></td>
                        </tr>
                        <tr>
                            <th scope="row">5</th>
                            <td>Паспортные данные</td>
                            <td><a asp-action="Index" asp-controller="Pasport">Перейти</a></td>
                        </tr>
                        <tr>
                            <th scope="row">5</th>
                            <td>Данные СНИЛС</td>
                            <td><a asp-action="Index" asp-controller="Snils">Перейти</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="~/tur/js/slick.min.js"></script>
    <script src="~/tur/js/jquery.fancybox.min.js"></script>
    <script src="~/tur/js/main.js"></script>
</body>

